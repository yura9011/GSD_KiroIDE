{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .kiro/scripts/check_planning_lock.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .kiro/scripts/validate_syntax.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": []
  }
}
